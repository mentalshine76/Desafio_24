<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Opciones de Productos</div>
  

  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= link_to 'Show', product, class: 'btn btn-success'%></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', product, method: :delete, class:'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
